{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "speak keyboard",
  "version": "0.1.0",
  "identifier": "com.speak-keyboard-tauri.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "widget",
        "title": "speak keyboard",
        "width": 175,
        "height": 223,
        "minWidth": 150,
        "minHeight": 150,
        "maxWidth": 300,
        "maxHeight": 400,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focusable": false,
        "center": false,
        "x": 100,
        "y": 100
      },
      {
        "label": "settings",
        "title": "settings",
        "width": 500,
        "height": 550,
        "resizable": true,
        "maximizable": false,
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["../bin/bridge"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
